<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!-- last_name 컬럼이름을 lastName 필드이름과 매핑시킴 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        
        <!-- 기본 SQL문에 대한 RDBMS 응답-타임아웃-시간(ms) -->
        <setting name="defaultStatementTimeout" value="50"/>
        
        <!-- JDBC타입을 파라미터에 제공하지 않을때 null값을 처리한 JDBC타입을 명시한다. 
             일부 드라이버는 칼럼의 JDBC타입을 정의하도록 요구하지만 
             대부분은 NULL, VARCHAR 나 OTHER 처럼 일반적인 타입값을 사용해서 동작한다 기본값: OTHER-->
        <setting name="jdbcTypeForNull" value="OTHER"/>
        
        <!-- 가져온 값이 null일 때 setter나 맵의 put 메소드를 호출할지를 명시 
             Map.keySet() 이나 null값을 초기화할때 유용함. int, boolean 등과 같은 원시타입은 null을 설정할 수 없다는 점은 알아두면 좋다. 기본값: false-->
        <setting name="callSettersOnNulls" value="false"/>
        
        <!-- 생성자 자동 매핑을 적용할 때 칼럼 순서가 아닌 칼럼 이름과 생성자 인수들의 이름을 기반으로 매핑한다. (3.5.10 부터), 기본값: false, 기능 사용 않함 -->
        <setting name="argNameBasedConstructorAutoMapping" value="false"/>
	</settings>


</configuration>
